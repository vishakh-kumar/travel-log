<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs')  %>
    <%- include('../partials/navigation-css.ejs')  %>
    <title>Travel Log | Bloggers</title>
</head>
<body>
    <%- include("../partials/nav.ejs")%>
    <main>
        <h1>BLOGGERS</h1>
        <ul>
            <% bloggers.forEach(blogger => { %> 
            <li>
                <a href="/blogger/<%=blogger._id%>"><%= blogger.first_name %> <%= blogger.last_name %> </a>
                <form action="/blogger/<%=blogger._id%>?_method=DELETE" method="POST">
                <input type="submit" value="X">
                </form>
            </li>
            <% }); %> 
        </ul>
    </main>
</body>
</html>