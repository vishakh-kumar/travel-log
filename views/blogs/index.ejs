<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')  %>
    <%- include('../partials/navigation-css.ejs')  %>
    <style>
        .blog_desc {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .title-delete {
            display: flex;
        }
    </style>
    <title>Travel Blog | Blogs</title>
</head>

<body>
    <%- include('../partials/nav.ejs')  %>
    <main>
        <h1>BLOGS</h1>
        <div>
            <ul>
                <% blogs.forEach(blog =>{ %>
                <li>
                    <div class="title-delete">
                        <a href="/blogs/<%= blog._id %> "><%= blog.title%></a>
                        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                            <input type="submit" value="X">
                        </form>
                    </div>
                    <div class="blog_desc">
                        <%= blog.blog_desc%>
                    </div>

                </li>
                <%}) %>
            </ul>
        </div>
    </main>
</body>

</html>