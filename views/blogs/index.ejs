<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')  %>
    <%- include('../partials/css-global.ejs')  %>
    <style>
        .blog_desc {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            margin-top: -40px;
        }

        .title-delete {
            display: flex;
        }
    </style>
    <title>Travel Blog | Blogs</title>
</head>

<body>
    <%- include('../partials/nav.ejs')  %>
    <main class="container">
        <h1>BLOGS</h1>
        <div>
            <ul>
                <% blogs.forEach(blog =>{ %>
                <li>
                    <div class="title-delete">
                        <a class="li-heading" href="/blogs/<%= blog._id %> "><%= blog.title%></a>
                        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                            <button type="submit"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                    <div class="blog_desc">
                        <%= blog.blog_desc%>
                    </div>

                </li>
                <%}) %>
            </ul>
        </div>
    </main>
</body>

</html>